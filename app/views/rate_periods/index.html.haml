.container-fluid
  .row
    =render "administration/side_menu"
    .col-sm-9.col-md-10.main
      %h1 List of rate periods
      %table.table
        %thead
          %tr
            %th Title
            %th From
            %th to
            %th{:colspan => 3} Rate
        %tbody
          %tr
            %td Basse Saison 2020
            %td 2020/02/01
            %td 2020/06/30
            %td - 5%
            %td Now
            %td
              %button.btn.btn-default Edit
              %button.btn.btn-default Archive
          %tr
            %td Haute Saison 2020
            %td 2020/02/01
            %td 2020/06/30
            %td + 20%
            %td
            %td
              %button.btn.btn-default Edit
              %button.btn.btn-default Archive
          %tr
            %td{:colspan => 5}
            %td
              = link_to "New", new_rate_period_path, :class => "btn btn-primary btn-lg"