.container-fluid
  .row
    =render "administration/side_menu"
    .col-sm-9.col-md-10.main
      %h1 Room manager
      %table.table
        %tbody
          - current_floor = 0
          - @rooms.each do |room|
            - if room.floor > current_floor
              - current_floor = room.floor
              %tr
                %th{:colspan => 4}
                  = "Floor #{room.floor}"
            %td.card
              .panel.panel-default
                .panel-heading
                  %h3
                    = "Room #{room.number}"
                    
                .panel-body
                  %h4
                    = "Type: #{room.room_type.title}"
                  %h4
                    = "View: #{room.room_view.title}"
                  %p
                    = "Capacity #{room.capacity} persons"
                  %h4 Min price
                  %h4 Max price
                  = link_to "Edit", rooms_path, :class => "btn btn-default btn-sm btn-block"