.container-fluid
  .row
    =render "administration/side_menu"
    .col-sm-9.col-md-10.main
      %h1 List of rate periods
      - flash.each do |name, msg|
        .alert.alert-success
          = msg
      %table.table
        %thead
          %tr
            %th Title
            %th From
            %th to
            %th{:colspan => 3} Rate
        %tbody
          - @room_pricings.each do |room_price|
            %tr
              %td
                = room_price.title
              %td
                = room_price.date_from
              %td
                = room_price.date_to
              %td{:class => class_from_value(room_price.over_rate_percentage, room_price.over_rate_dollar)}
                - if room_price.over_rate_percentage
                  = room_price.over_rate_percentage.to_s + "%"
                - else
                  = room_price.over_rate_dollar.to_s + "$"
              %td Now
              %td
                = link_to "Edit", edit_rate_period_path(room_price.id), :class => "btn btn-default"
                %button.btn.btn-default Archive
          %tr
            %td{:colspan => 5}
            %td
              = link_to "New", new_rate_period_path, :class => "btn btn-primary btn-lg"