.panel.panel-default
  .panel-body
    = form_for [ :administration, @setting ], :html => {:class => "form-horizontal"} do |f|
      .form-group
        = f.label :company_name, "Company Name", values: @setting.company_name, class: "col-sm-2 control-label"
        .col-sm-10
          = f.text_field :company_name, class: "form-control"
      .form-group
        = f.label :address, "Address", class: "col-sm-2 control-label"
        .col-sm-10
          = f.text_field :address, class: "form-control", rows: "2"
      .form-group
        = f.label :zip_code, "Zip code", class: "col-sm-2 control-label"
        .col-sm-2
          = f.text_field :zip_code, class: "form-control"
      .form-group
        = f.label :city, "City", class: "col-sm-2 control-label"
        .col-sm-4
          = f.text_field :city, class: "form-control"
      .form-group
        = f.label :country, "Country", class: "col-sm-2 control-label"
        .col-sm-4
          = f.text_field :country, class: "form-control"
      .form-group
        = f.label :phone_number, "Phone number", class: "col-sm-2 control-label"
        .col-sm-4
          = f.text_field :phone_number, class: "form-control"
      .form-group
        = f.label :email, "E-mail address", class: "col-sm-2 control-label"
        .col-sm-4
          = f.text_field :email, class: "form-control"
      .form-group
        = f.label :tps, "TPS rate", class: "col-sm-2 control-label"
        .col-sm-2
          = f.text_field :tps, class: "form-control"
      .form-group
        = f.label :tvq, "TVQ rate", class: "col-sm-2 control-label"
        .col-sm-2
          = f.text_field :tvq, class: "form-control"
      .form-group
        .col-sm-10
        .col-sm-2
          = submit_tag("Save", class: "btn btn-primary btn-lg btn-block")

- if @setting.errors.any?
  %h2 The following errors appear on save
  - @setting.errors.full_messages.each do |msg|
    .alert.alert-danger
      = msg

