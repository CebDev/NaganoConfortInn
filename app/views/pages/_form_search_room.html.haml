.reservation-form
  = form_tag :search_page, :method => "get", :class => "form-horizontal" do
    .form-group
      = label_tag :date_from, "Check in", class: "col-sm-3 control-label"
      .col-sm-3
        = text_field_tag :date_from, params[:date_from], id: "datepicker-from", class: "form-control", required: true
      = label_tag :date_to, "Check out", class: "col-sm-3 control-label"
      .col-sm-3
        = text_field_tag :date_to, params[:date_to], id: "datepicker-to", class: "form-control", required: true
    .form-group
      = label_tag :number_of_room, "Number of rooms", class: "col-sm-3 control-label"
      .col-sm-3
        = select_tag(:number_of_room, options_for_select(1..9, params[:number_of_room] || "1"), class: "form-control")
      = label_tag :number_of_adults, "Adults", class: "col-sm-3 control-label"
      .col-sm-1
        #rm-adult.btn.btn-default.form-btn -
      .col-sm-1
        = text_field_tag :number_of_adults, params[:number_of_adults] || "1", class: "form-control form-number", id: "number-of-adult"
      .col-sm-1
        #add-adult.btn.btn-default.form-btn +
    .form-group
      = label_tag :room_type, "Room type", class: "col-sm-3 control-label"
      .col-sm-3
        = select_tag(:room_type, options_from_collection_for_select( @room_types, "id", "title", params[:room_type] ), include_blank: "All", class: "form-control")
      = label_tag :number_of_children, "Children", class: "col-sm-3 control-label"
      .col-sm-1
        #rm-child.btn.btn-default.form-btn -
      .col-sm-1
        = text_field_tag :number_of_children, params[:number_of_children] || '0', class: "form-control form-number", id: "number-of-child"
      .col-sm-1
        #add-child.btn.btn-default.form-btn +
    .form-group
      .col-sm-8
      .col-sm-4
        =label_tag :view_ocean, "View ocean", class: "form-check-label"
        =check_box_tag :view_ocean, '', params[:view_ocean] || false, class: "form-check-input"
    .form-group
      .col-sm-8
      .col-sm-4
        = submit_tag("Find", class: "btn btn-default btn-lg btn-block btn-dark")