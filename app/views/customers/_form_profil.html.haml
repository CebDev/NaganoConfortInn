= form_for @customer, :html => {:class => "form-horizontal"} do |f|
  .form-group
    = f.label :name, "Name", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label :first_name, "First name", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :first_name, class: "form-control"
  .form-group
    = f.label :address, "Address", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :address, class: "form-control", rows: "2"
  .form-group
    = f.label :zip_code, "Zip code", class: "col-sm-2 control-label"
    .col-sm-2
      = f.text_field :zip_code, class: "form-control"
  .form-group
    = f.label :city, "City", class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :city, class: "form-control"
  .form-group
    = f.label :country, "Country", class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :country, class: "form-control"
  .form-group
    = f.label :phone_number, "Phone number", class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :phone_number, class: "form-control"
  .form-group
    = f.label :email, "E-mail address", class: "col-sm-2 control-label"
    .col-sm-4
      = f.text_field :email, class: "form-control"
  .form-group
    .col-sm-10
    .col-sm-2
      = submit_tag("Save", class: "btn btn-lg btn-block btn-dark")
- if @customer.errors.any?
  %h2 The following errors appear on save
  - @customer.errors.full_messages.each do |msg|
    .alert.alert-danger
      = msg